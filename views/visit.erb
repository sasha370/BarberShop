<!-- То что находится в {} будет выполнено только после загрузки всей странице.
Именно так нужно вызывать скрипты jquery ЧЕРЕЗ function -->
<script type="text/javascript">
    $(function () {
       $('select[name="colorpicker"]').simplecolorpicker();
    });
</script>

<h2>Записаться</h2>
<p>На этой странице вы сможете записаться к нам в Barber Shop</p>




<form action="/visit" method="POST" role="form">

  <div class="form-group">
    <label>Ваше имя*</label>
    <!--  Чтобы у нас не сбрасывалось поле после обновления страницы, мы присваиваем значению Value переменную , введеную ранее-->
    <input id="bbb" name="username" type="text" class="form-control" placeholder="Ваше имя*" value = "<%=@username %>">
  </div>

  <div class="form-group">
    <label>Ваш телефон*</label>
    <input name="phone" type="text" class="form-control" placeholder="Ваш телефон*" value = "<%=@phone %>">
  </div>

  <div class="form-group">
    <label>Когда вас ждать?*</label>
    <input id = "aaa"  name="datetime" type="text" class="form-control" placeholder="Введите дату и время*"   value = "<%=@datetime %>">
  </div>

  <div class="form-group">
    <label for="exampleFormControlSelect1">Выберете мастера</label>
    <select class="form-control ccc" id="exampleFormControlSelect1" name = "master">
      <!-- Для того чтобы при ошибочном выборе не мбрасывались значения выбора, нужно проптсить
      сохранение переиенной с подставлением значения selected -->
      <option<%= @master == 'Джейми' ? 'selected' : '' %>>Джейми</option>
      <option <%= @master == 'Джонс Избранный' ? 'selected' : '' %>>Джонс Избранный</option>
      <option <%= @master == 'Клара' ? 'selected' : '' %> >Клара</option>
      <option <%= @master == 'Василий' ? 'selected' : '' %>>Василий</option>
    </select>d
  </div>
  <br/>

  <div class="form-group">
    <label>В какой цвет вы хотите покраситься ?*</label>

<!-- тобы передать выбор на Сервер мы используем имя ColorPicker? по которому быдем выдергивать значение из массива PARAMS -->
  <select name="colorpicker">
    <option value="#7bd148">Green</option>
    <option value="#5484ed">Bold blue</option>
    <option value="#a4bdfc">Blue</option>
    <option value="#46d6db">Turquoise</option>
    <option value="#7ae7bf">Light green</option>
    <option value="#51b749">Bold green</option>
    <option value="#fbd75b">Yellow</option>
    <option value="#ffb878">Orange</option>
    <option value="#ff887c">Red</option>
    <option value="#dc2127">Bold red</option>
    <option value="#dbadff">Purple</option>
    <option value="#e1e1e1">Gray</option>
  </select>
  </div>

<p> <small> Поля отмеченные * обязательны для заполнения </small></p>
  <button type="submit" class="btn btn-primary">Записаться</button>

</form>
<br/>


